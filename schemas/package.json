{
    "id": "/package",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "required": true
        },
        "author": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "versions": {
            "type": "object",
            "required": true,
            "patternProperties": {
                ".*": {                    
                    "$ref": "/version"
                }                
            },
            "additionalProperties": false,
            "minProperties": 1
        }
    }
}